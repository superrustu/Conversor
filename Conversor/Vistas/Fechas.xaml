<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Conversor.Vistas.Fechas">
    <ContentPage.Content>
        <StackLayout>
            <DatePicker x:Name="dtFecha"
                        Format="MM dd, yyyy"
                        Margin="30,0,0,30"
                        DateSelected="dtFecha_DateSelected"></DatePicker>
            <TimePicker x:Name="TpHora"
                        PropertyChanged="TimePicker_PropertyChanged">
                
            </TimePicker>
            
            <Label x:Name="lblResultado" Text="Resultado"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="lblHora"
                   Text="Hora"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>